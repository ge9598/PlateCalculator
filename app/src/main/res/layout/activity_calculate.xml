<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculateActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plate Calculator"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/plates"
        android:layout_below="@+id/title"
        android:id="@+id/txtExplain"
        android:gravity="center"
        android:text="This Page is for Calculating Minimum Weights, press save to store current value,
and press add five to add five to all values." />
    <LinearLayout
        android:layout_below="@+id/txtExplain"
        android:layout_above="@+id/Calculation"
        android:id="@+id/plates1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="User 1:"
                android:textSize="20dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:id="@+id/User1"
                android:gravity="center"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="User 2:"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="0.5"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:id="@+id/User2"
                android:gravity="center"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="User 3:"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="0.5" />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:id="@+id/User3"
                android:gravity="center"
                android:layout_weight="2"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/plates"
        android:layout_above="@+id/layoutControl"
        android:layout_width="match_parent"
        android:id="@+id/Calculation"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:layout_weight="0.5"
            android:text="Total:"
        />


        </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnSave1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save" />
        <Button
            android:id="@+id/btnaddFiveToAll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Five" />
    </LinearLayout>

</RelativeLayout>